# Dockerfile.frontend
FROM python:3.11-slim-bookworm

WORKDIR /app

# Copy requirements for the frontend app
# Create a new, minimal requirements-frontend.txt
COPY requirements-frontend.txt .
RUN pip install --no-cache-dir -r requirements-frontend.txt

# Copy the Streamlit app code
COPY src/demo_app.py ./src/demo_app.py

# Expose Streamlit's default port
EXPOSE 8501

# Command to run the Streamlit app
CMD ["streamlit", "run", "src/demo_app.py", "--server.port=8501", "--server.address=0.0.0.0"]